/* 水平间距 */
 .uni-card__header-content-title {
  font-weight: 600;
}
.station_list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border: 1px solid #DCDCDC;
  border-radius: 26rpx;
  box-shadow: rgba(0, 0, 0, 0.08) 0px 0px 3px 1px;
  height: 200rpx;
  padding: 20rpx;
}
.station_list .img {
  flex: 1;
}
.station_list .img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 26rpx;
}
.station_list .content {
  flex: 2.5;
  margin-left: 16rpx;
}
.station_list .content .name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}
.station_list .content .address {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 6rpx;
}
.station_list .content .price {
  font-size: 24rpx;
  color: red;
  margin-bottom: 8rpx;
}
.station_list .content .status {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
}
.station_list .content .status .distance {
  display: flex;
  flex-direction: row;
  justify-content: center;
  border-radius: 18rpx;
  background-color: #e7eef6;
  padding: 2rpx;
}
.station_list .content .status .distance .icon-navigation {
  color: #3b82fc;
  font-size: 40rpx;
}
.station_list .content .status .distance text {
  font-size: 28rpx;
}