/* 水平间距 */
 .uni-card__header-content-title {
  font-weight: 600;
}
.station_list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border: 1px solid #DCDCDC;
  border-radius: 26rpx;
  box-shadow: rgba(0, 0, 0, 0.08) 0px 0px 3px 1px;
  background-color: #ffffff;
  height: 200rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}
.station_list .img {
  flex: 1;
}
.station_list .img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 26rpx;
}
.station_list .content {
  flex: 2.5;
  margin-left: 16rpx;
}
.station_list .content .name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}
.station_list .content .address {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}
.station_list .content .price {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}
.station_list .content .price text {
  font-size: 28rpx;
  font-weight: 600;
  color: red;
}
.station_list .content .price .elec_charge {
  margin-right: 20rpx;
}
.station_list .content .status {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
}
.station_list .content .status .station_info .progress {
  margin-top: 8rpx;
}
.station_list .content .status .distance {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
  background-color: #ecf4fe;
  color: #3c9cff;
  padding: 0 8rpx;
}
.station_list .content .status .distance .icon-navigation {
  font-size: 40rpx;
}
.station_list .content .status .distance text {
  font-size: 28rpx;
  font-weight: 600;
}