/* 水平间距 */
 .uni-card__header-content-title {
  font-weight: 600;
}
 .uni-section-header {
  padding: 0 20rpx !important;
}
 .uni-section {
  background-color: #f5f5f5;
}
.home {
  padding-bottom: 210rpx;
}
.home .top {
  background-image: linear-gradient(to bottom, #e0ecfc, #fcfdff);
}
.home .top .search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.home .top .search .city {
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex: 1;
}
.home .top .search .city .current_city {
  font-size: 28rpx;
}
.home .top .search .city .icon-triangle {
  padding-top: 4rpx;
  font-size: 32rpx;
}
.home .top .search .search_bar {
  flex: 4.7;
}
.home .top .banner {
  padding: 20rpx;
}
.home .charge_station {
  margin: 0 30rpx;
}
.home .charge_station .top_area {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
}
.home .charge_station .top_area .mode {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.home .charge_station .top_area .mode .icon-map {
  margin-right: 4rpx;
}