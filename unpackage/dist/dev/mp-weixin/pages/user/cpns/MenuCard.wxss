/* 水平间距 */
.menu-card {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 20rpx;
  border-radius: 26rpx;
  border: 1px solid #DCDCDC;
  box-shadow: rgba(0, 0, 0, 0.08) 0px 0px 3px 1px;
  padding: 20rpx 0;
}
.menu-card .menu-item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.menu-card .menu-item .image {
  width: 70rpx;
  height: 70rpx;
}
.menu-card .menu-item .title {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #666666;
}